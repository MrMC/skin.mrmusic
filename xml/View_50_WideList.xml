<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="ListLayouts">
		<param name="list_item_height">list_item_height</param>
		<definition>
			<focusedlayout height="$PARAM[list_item_height]">
				<control type="image">
					<left>0</left>
					<right>0</right>
					<bottom>0</bottom>
					<texture colordiffuse="primary_color" border="5">buttons/focus.png</texture>
					<visible>Control.hasFocus(50)</visible>
				</control>
				<control type="label">
					<left>35</left>
					<bottom>0</bottom>
					<right>90</right>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<font>font30_title</font>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>40</left>
					<bottom>0</bottom>
					<right>40</right>
					<align>right</align>
					<aligny>center</aligny>
					<font>font30_title</font>
					<label>$INFO[ListItem.Label2]</label>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
			</focusedlayout>
			<itemlayout height="$PARAM[list_item_height]">
				<control type="label">
					<left>35</left>
					<bottom>0</bottom>
					<right>90</right>
					<aligny>center</aligny>
					<font>font30_title</font>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
				<control type="label">
					<left>40</left>
					<bottom>0</bottom>
					<right>40</right>
					<align>right</align>
					<aligny>center</aligny>
					<font>font30_title</font>
					<label>$INFO[ListItem.Label2]</label>
					<textcolor>grey</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
				</control>
			</itemlayout>
		</definition>
	</include>
	<include name="View_50_WideList">
		<control type="group">
			<include>OpenClose_Left</include>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus | Control.HasFocus(6130)" reversible="true">
				<effect type="slide" start="0" end="520" time="400" tween="sine" easing="inout" />
			</animation>
			<visible>Control.IsVisible(50)</visible>
			<include>Visible_Left</include>
			<control type="list" id="50">
				<left>687</left>
				<top>list_top_offset</top>
				<bottom>list_bottom_offset</bottom>
				<right>80</right>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<orientation>vertical</orientation>
				<pagecontrol>531</pagecontrol>
				<onleft>9000</onleft>
				<onright>531</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="$LOCALIZE[31107]">list</viewtype>
				<include>ListLayouts</include>
			</control>
			<control type="scrollbar" id="531">
				<right>0</right>
				<top>85</top>
				<width>18</width>
				<bottom>86</bottom>
				<onleft>50</onleft>
				<onright>50</onright>
				<orientation>vertical</orientation>
				<texturesliderbackground />
				<animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
				<animation effect="fade" start="100" end="3" time="200" tween="sine" condition="System.HasModalDialog">Conditional</animation>
				<animation effect="fade" start="0" end="100" delay="300" time="320">WindowOpen</animation>
			</control>
		</control>
	</include>
</includes>
